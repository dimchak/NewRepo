<Window x:Class="Authorization.Views.Auth.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="300" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Вход" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontSize="20"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Логин" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="10 0 0 0"/>
            <TextBox x:Name="Login_TextBox" Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center" Height="20"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Пароль" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="10 0 0 0"/>
            <TextBox x:Name="Password_TextBox" Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center" Height="20"/>
        </Grid>
        <CheckBox x:Name="Remind_CheckBox" Grid.Row="3" Content="Запомнить меня" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0"/>
        <Button x:Name="Authorization_Button" Grid.Row="4" Content="Войти" Margin="10 10 10 10"/>
    </Grid>
</Window>
